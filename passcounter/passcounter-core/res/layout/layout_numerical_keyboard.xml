<?xml version="1.0" encoding="utf-8"?>
<com.ad.android.ridesystems.passengercounter.views.NumericalKeyboard
	xmlns:android="http://schemas.android.com/apk/res/android"	
	xmlns:counter="http://schemas.android.com/apk/res/com.ad.android.ridesystems.passengercounter.views"
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:weightSum="5"           
    android:orientation="horizontal">		    
    <LinearLayout
    	android:id="@+id/keypad_num_buttons"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:weightSum="4"    
	    android:layout_weight="1"
	    android:orientation="vertical">    
	    <LinearLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:weightSum="3"
		    android:layout_weight="1"    
		    android:orientation="horizontal">	    
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="1"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="2"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="3"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>	    
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:weightSum="3"    
		    android:layout_weight="1"
		    android:orientation="horizontal">
		    
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="4"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="5"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="6"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>	       
	    </LinearLayout>    
	        <LinearLayout
			    android:layout_width="fill_parent" 
			    android:layout_height="fill_parent"
			    android:weightSum="3"  	      
			    android:layout_weight="1"
		    	android:orientation="horizontal">	    
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="7"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="8"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="9"
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>	    
	    </LinearLayout>
	    <LinearLayout
	     	android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:weightSum="3"
		    android:orientation="horizontal">
		 	<Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="0"
		    	android:layout_weight="2"
		    	style="@style/numericButton">
		    </Button>
		    <Button
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:text="clear"		    	
		    	android:layout_weight="1"
		    	style="@style/numericButton">
		    </Button>   		    		       
	    </LinearLayout>
    </LinearLayout>
   <LinearLayout
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:weightSum="2"
	    android:layout_weight="4"    	    
	    android:orientation="vertical">
	    <Button
	    	android:id="@+id/keypad_plus_button"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="fill_parent"
	    	android:text="+"
	    	android:layout_weight="1"
	    	style="@style/numericButton">
	    </Button>
	    <Button
	    	android:id="@+id/keypad_minus_button"
	    	android:text="-"
	    	android:layout_weight="1"
	    	style="@style/numericButton" 
	    	android:layout_height="fill_parent" 
	    	android:layout_width="fill_parent">
	    </Button>   		    	
	</LinearLayout>
</com.ad.android.ridesystems.passengercounter.views.NumericalKeyboard>
